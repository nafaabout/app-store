<div id="<%= dom_id app %>">
  <% if action_name != "show" %>
    <%= link_to "Show this app", app, class: "rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
    <%= link_to 'Edit this app', edit_app_path(app), class: "rounded-lg py-3 ml-2 px-5 bg-gray-100 inline-block font-medium" %>
    <hr class="mt-6">
  <% end %>
</div>
